# Build the docker image with `npx nx docker-build brocoli`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t brocoli`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system brocoli && \
          adduser --system -G brocoli brocoli

COPY dist/apps/brocoli brocoli
RUN chown -R brocoli:brocoli .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix brocoli --omit=dev -f install

CMD [ "node", "brocoli" ]
